package com.rengelbert.fussball3d{	import away3d.containers.ObjectContainer3D;		import flash.display.Sprite;	import flash.geom.Point;
	public class GameSprite	{				public var skin:Sprite;		public var skin3d:ObjectContainer3D;		public var game:Fussball3d;				public var x:Number;		public var y:Number;				public var nextX:Number;		public var nextY:Number;				public var vx:Number;		public var vy:Number;										public function GameSprite(game:Fussball3d) {			this.game = game;			skin3d = new ObjectContainer3D();			vx = vy = 0;		}				public function get vector2d ():Point {			return new Point (nextX - x, nextY - y);		}				public function get mag2d ():Number {			var v:Point = this.vector2d;			return v.x * v.x + v.y * v.y;		}				public function update (dt:Number):void {					}				public function place ():void {						x = nextX;			y = nextY;						skin.x = x;			skin.y = y;		}	}}